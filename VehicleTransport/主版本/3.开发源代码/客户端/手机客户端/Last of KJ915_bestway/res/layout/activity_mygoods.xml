    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/item_mygoods_header" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/ex_lv"
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >
    </ExpandableListView>

</LinearLayout>