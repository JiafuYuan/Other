<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_marginTop="5dip"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/waybill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="运单号: "
            android:textColor="@android:color/black"
            android:textSize="20dip" />

        <TextView
            android:id="@+id/waybill_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dip"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="BL1100023"
            android:textSize="16dip" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/apply_department_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:gravity="center_vertical"
                android:text="申请部门: "
                android:textSize="16dip" />

            <TextView
                android:id="@+id/apply_department_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="未知"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="21dip"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                
                android:id="@+id/apply_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:gravity="center_vertical"
                android:text="申请人: "
                android:textSize="16dip" />

            <TextView
                android:id="@+id/apply_user_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="未知"
                android:textSize="14dip" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll3"
        android:layout_below="@id/ll2"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/meterial_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:gravity="center_vertical"
                android:text="物料类型: "
                android:textSize="16dip" />

            <TextView
                android:id="@+id/meterial_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="未知"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="21dip"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                 android:id="@+id/number_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:gravity="center_vertical"
                android:text="物料数量: "
                android:textSize="16dip" />

            <TextView
                android:id="@+id/number_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="未知"
                android:textSize="14dip" />
        </LinearLayout>
    </LinearLayout>

   

    <ImageView
        android:id="@+id/jiantou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/fenbu_jiantou_black" />

    <LinearLayout
        android:layout_below="@id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" >

        <TextView
            android:id="@+id/arrive_time_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="center"
            android:text="计划到达时间: "
            android:textSize="16dip" />

        <TextView
            
            android:id="@+id/arrive_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dip"
            android:gravity="center"
            android:text="2014-8-15 15:31:40"
            android:textSize="14dip" />
    </LinearLayout>

    <View style="@style/light_string" />

</RelativeLayout>